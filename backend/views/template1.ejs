<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invoice</title>
    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 flex justify-center ">
    <div class="relative p-6 w-full bg-white shadow-md rounded-lg border border-gray-300">
  
      <!-- Header with Logo and Seller Info -->
      <div class="flex mb-5">
        <img src="<%= companyInfo.logo %>" class="w-32 h-16 rounded" alt="Company Logo" />
        <div class="mx-4">
          <p class="text-2xl font-semibold"><%= companyInfo.companyName %></p>
          <p class="text-[14px]"><%= companyInfo.companyWebsite %></p>
        </div>
      </div>
  
      <!-- Buyer & Invoice Info -->
      <div class="grid grid-cols-2 gap-4 border-b pb-4 mb-4">
        <div>
          <h3 class="font-semibold">Billed To:</h3>
          <p class="font-semibold"><%= userInfo.fullName %></p>
          <hr class="w-2/3 border-t border-blue-400" />
          <p class="text-[15px]"><%= userInfo.city %></p>
          <p class="text-[15px]"><%= userInfo.email %></p>
          <p class="text-[15px]"><%= userInfo.contactNumber %></p>
        </div>
        <div class="text-left mx-auto">
          <h2 class="text-3xl text-blue-500 font-bold mb-1">INVOICE</h2>
          <p><strong>Invoice Number:</strong> INV<%= userInfo.id %></p>
          <p><strong>Date:</strong> <%= new Date().toLocaleDateString('en-GB') %></p>
          <p><strong>Due Date:</strong> <%= new Date(userInfo.dueDate).toLocaleDateString('en-GB') %></p>
        </div>
      </div>
  
      <!-- Item Table -->
      <table class="w-full border-collapse border border-gray-300 mb-4">
        <thead>
          <tr class="bg-blue-500 text-white">
            <th class="border-t p-2">Item Description</th>
            <th class="border p-2">Quantity</th>
            <th class="border p-2">Unit Price</th>
            <th class="border-t p-2">Total</th>
          </tr>
        </thead>
        <tbody>
          <% userInfo.services.forEach(item => { %>
            <tr>
              <td class="border-t border-b p-2"><%= item.name %></td>
              <td class="border p-2 text-center"><%= item.quantity %></td>
              <td class="border p-2 text-center">$<%= item.price %></td>
              <td class="border-t border-b p-2 text-center">$<%= item.quantity * item.price %></td>
            </tr>
          <% }) %>
          <% userInfo.addOns.forEach(function(addOn) { %>
            <tr>
              <td class="border-t border-b p-2"><%= addOn.name %></td>
              <td class="border p-2 text-center">1</td>
              <td class="border  p-2 text-center">$<%= addOn.price %></td>
              <td class="border-t border-b  p-2 text-center">$<%= addOn.price %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
  
      <!-- Totals -->
      <div class="text-right">
        <p class="px-3"><strong>Subtotal:</strong> $<%= userInfo.priceSummary.ItemPrice.toFixed(2) %></p>
        <p class="px-3"><strong>Discount:</strong> $<%= userInfo.priceSummary.totalDiscount.toFixed(2) %></p>
        <hr class="my-1 w-1/3 border-t border-gray-400 ml-auto" />
        <p class="text-xl text-blue-500 font-bold px-3">Total: $<%= userInfo.priceSummary.totalAmount.toFixed(2) %></p>
      </div>
  
      <!-- Payment Info -->
      <div>
        <h3 class="text-blue-500 font-semibold">Payment Details:</h3>
        <p><strong>Bank Name:</strong> ABC Bank</p>
        <p><strong>Account Number:</strong> 1234576697</p>
        <p><strong>Payment Terms:</strong>Due in 30 days</p>
      </div>
  
      <!-- Footer -->
      <div class="text-right mt-4">
        <hr class="w-1/3 border-t border-gray-400 ml-auto" />
        <p class="mx-8">Company Signature</p>
      </div>
  
      <div>
        <p><strong>Notes:</strong></p>
        <p>This is applicable for one Time.</p>
      </div>
  
      <p class="text-center mt-6 font-semibold">Thank You for Your Business!</p>
  
     
  
   <!-- SVG Bottom Wave (Slightly Taller) -->
<svg class="absolute bottom-0 right-0 w-45 h-16" viewBox="0 0 120 60" preserveAspectRatio="none">
    <path d="M 0 65 Q 60 -18 130 40" fill="rgb(59, 130, 246)" />
    <path d="M 0 100 Q 50 -12 140 48" fill="black" />
  </svg>
  
  
  
     
    
  </div>
</body>
</html>
